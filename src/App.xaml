<Application x:Class="EnvironmentControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Views/Theme.xaml"></ResourceDictionary>
             </ResourceDictionary.MergedDictionaries>
             <Style x:Key="WindowStyle" TargetType="Border">
                 <Setter Property="CornerRadius" Value="3"/>
                 <Setter Property="Background" Value="{StaticResource AppBackground}"/>
                 <Setter Property="BorderBrush" Value="{StaticResource AppBorderColor}"/>
                 <Setter Property="BorderThickness" Value="2"/>
             </Style>
         </ResourceDictionary>
    </Application.Resources>
</Application>
