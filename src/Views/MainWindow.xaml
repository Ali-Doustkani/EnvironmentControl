<Window x:Class="EnvironmentControl.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:EnvironmentControl.Views"
        DataContext="{Binding Source={StaticResource locator}, Path=MainViewModel}"
        Title="Environment Control" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource AppBackground}"
        Width="300"
        MinHeight="300"
        SizeToContent="Height"
        MouseDown="MainWindow_OnMouseDown"
        Loaded="MainWindow_OnLoaded" 
        Closing="MainWindow_OnClosing">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{StaticResource CloseBackground}" CornerRadius="4">
                            <Image Source="../Resources/close.png" Width="12" Height="12"></Image>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="{StaticResource CloseBackgroundOnOver}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Click="ButtonBase_OnClick"/>
        <ItemsControl Margin="0 20 0 0" Padding="10" ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <views:Variable/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
